<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="textViewSecondaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="textViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="textViewUpperRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="textViewUnderRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="textViewButtonText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="customDefaultButton" parent="CardView">
        <item name="cardCornerRadius">@dimen/button_corner_radius</item>
        <item name="cardBackgroundColor">@color/soft_red_button</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="textViewCutawayLogo" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">@font/satisfy</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
    </style>

    <style name="BigImageCard" parent="CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="cardBackgroundColor">@color/dark_grey_button</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SocialNetworkButton">
        <item name="android:maxHeight">@dimen/social_network_icon</item>
        <item name="android:minHeight">@dimen/social_network_icon</item>
        <item name="android:maxWidth">@dimen/social_network_icon</item>
        <item name="android:minWidth">@dimen/social_network_icon</item>
        <item name="android:titleMarginStart">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:focusable">true</item>
        <item name="android:titleMarginEnd">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>